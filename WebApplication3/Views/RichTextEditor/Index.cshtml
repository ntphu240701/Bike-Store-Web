@model WebApplication3.Models.PersonModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style type="text/css">
        body {
            font-family: Arial;
            font-size: 10pt;
        }

        .error {
            color: red;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("Index", "RichTextEditor", FormMethod.Post))
    {

        @Html.LabelFor(m => m.PersonalDetails)<br />
        @Html.TextAreaFor(m => m.PersonalDetails)
        @Html.ValidationMessageFor(m => m.PersonalDetails, "", new { @class = "error" })
        <br /><br />
        <input type="submit" value="Submit" />
        <br />
        <span>@Html.Raw(Model.PersonalDetails)</span>
    }
    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

    <script type="text/javascript">
        tinymce.init({ selector: 'textarea', width: 500 });
    </script>
</body>
</html>
